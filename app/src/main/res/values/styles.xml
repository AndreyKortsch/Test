<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorText</item>

        <item name="spinnerStyle">@style/ApplicationStyle2</item>
   </style>


        <style name="MyTextStyle" parent="@style/Widget.AppCompat.Button">
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#00FF00</item>
            <item name="android:typeface">monospace</item>
        </style>

    <style name="ButtonStyle" parent="android:style/Widget.Holo.Button">
        <item name="android:background">#0088FF</item>
        <item name="android:textColor">#0088FF</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/zx</item>
    </style>
    <style name="SplashTheme2" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/zx</item>
    </style>
    <style name="ApplicationStyle2" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:spinnerStyle">@drawable/zx</item>
    </style>
    <style name="ApplicationStyle" parent="Widget.AppCompat.Button">
        <item name="android:buttonStyle">@drawable/x</item>
    </style>

</resources>
