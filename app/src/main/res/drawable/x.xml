<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <size android:height="50dp" android:width="20dp"/>
            <corners android:radius="30dip"/>
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#345953" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <size android:height="50dp" android:width="20dp"/>
            <corners android:radius="3dip" />
            <stroke android:width="1dip"  android:dashWidth="34dp" android:color="#5e7974" />
            <solid android:color="#58857e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  android:layout_gravity="center">
            <size android:height="50dp" android:width="20dp"/>
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#C6FF00" />
            <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="#58857e" />
        </shape>
    </item>
</selector>
